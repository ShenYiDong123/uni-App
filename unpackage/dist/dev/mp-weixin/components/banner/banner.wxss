
.banner-box {
  width: 100%;
  height: 320rpx;
  overflow: hidden;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-top: 20rpx; /* 将轮播图往下移动 100rpx */
}
.swiper {
  width: 100%;
  height: 100%;
}
.banner-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.uni-swiper-dot {
  width: 8rpx;
  height: 8rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: inline-block;
  transition: all 0.3s ease;
}
.uni-swiper-dot-active {
  width: 20rpx;
  border-radius: 5rpx;
  background-color: #ffffff;
}
